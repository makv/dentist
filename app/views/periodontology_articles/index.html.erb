<div id="site-content">
<%= render 'header' %>
<%= render 'navigation' %>
  <div class="container_16">
    <div class="panes">
    <% PeriodontologyArticle.find_all_by_locale(I18n.locale).each do |article| %>
    <% if article.permalink == @article.permalink %>
      <div class="grid_16 alpha omega main-page-section">
        <%= render :template => 'periodontology_articles/show' %>
      </div>
    <% else %>
      <div class="grid_16 alpha omega main-page-section"></div>
    <% end%>
        <% end %>
    </div>
  </div>
</div>
<script>
$(function() {

	$("ul.tabs").tabs("div.panes > div", {
	
	  initialIndex: <%= @article.article_id-1 %>,			
		effect: 'fade',
		
		onBeforeClick: function(event, i) {
	
			// get the pane to be opened
			var pane = this.getPanes().eq(i);
	
			// only load once. remove the if ( ... ){ } clause if you want the page to be loaded every time
			
			if (pane.is(":empty")) {
	
				// load it with a page specified in the tab's href attribute
				pane.load(this.getTabs().eq(i).attr("href"));
			}
	
		}
	});
  
});
</script>
