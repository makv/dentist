<div class="grid_8 alpha">
  <div class="accordion">
    <h2 class="acc_trigger"><a href="#"><%= @article.title %></a></h2>
    <div class="acc_container block">
      <p><%= @article.description.html_safe %></p>
    </div>
    <h2 class="acc_trigger"><a href="#"><%= t('.before') %></a></h2>
    <div class="acc_container block">
    <% if !@article.image_before_file_size.nil? %>
      <%= image_tag @article.image_before.url %>
    <% end %>
    </div>
  </div>
</div>
<div class="grid_8 omega">
  <div class="accordion">
    <h2 class="acc_trigger"><a href="#"><%= t('.method') %></a></h2>
    <div class="acc_container block">
      <p><%= @article.method %></p>
    </div>
    <h2 class="acc_trigger"><a href="#"><%= t('.after') %></a></h2>
    <div class="acc_container block">
    <% if !@article.image_after_file_size.nil? %>
      <%= image_tag @article.image_after.url %>
    <% end %>
    </div>
  </div>
</div>
<%= render 'accordion.js' %>

